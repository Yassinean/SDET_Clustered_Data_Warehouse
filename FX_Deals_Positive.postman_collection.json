          "raw": "{\n  \"dealId\": \"D3001\",\n  \"fromCurrency\": \"USD\",\n  \"toCurrency\": \"JPY\",\n  \"timestamp\": \"2025-03-03T14:00:00Z\",\n  \"amount\": 999999999.99\n}"
        },
        "url": { "raw": "http://localhost:8080/api/deals/import" }
      },
      "event": [
