              "pm.test(\"Status code is 201\", function () { pm.response.to.have.status(201); });",
              "pm.test(\"Successful deal D3001\", function () { var jsonData = pm.response.json(); pm.expect(jsonData.successful).to.include(\"D3001\"); });"
            ]
          }
        }
      ]
    }
  ]
}
